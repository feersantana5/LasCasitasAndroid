<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="#ece7e7"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idImagen"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idNombre"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Menu"
                    android:textColor="#000"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/idPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio Menu"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/idPrimerPlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primer Plato"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/idSegundoPlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segundo Plato"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/idPostre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postre"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>